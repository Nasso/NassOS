term.setTextColor(colors.white)
term.setBackgroundColor(colors.blue)
term.clear()
print("Welcome in the recovery program")
print("Use this program if you have forgoted your password")
textutils.slowPrint("WARNING THIS WILL DELETE EVERYTHING")
print("Continue ? Y/N")
choix = read()
if choix == "Y" then
  shell.run("rm /*")
  print("Deleting files")
  sleep(1)
  write(".")
  sleep(1)
  write(".")
  sleep(1)
  write(".")
  sleep(1)
  term.clear()
  print("Done !Rebooting ...")
  sleep(1)
  os.reboot()
else
  os.reboot()
end
